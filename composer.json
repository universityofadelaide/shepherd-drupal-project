{
    "name":              "universityofadelaide/shepherd-drupal-project",
    "description":       "Project template for Shepherd Drupal 8 projects with composer.",
    "type":              "project",
    "license":           "GPL-2.0-or-later",
    "authors":           [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories":      [
        {
            "type": "composer",
            "url":  "https://packages.drupal.org/8"
        },
        {
            "type": "git",
            "url": "https://github.com/previousnext/drush_cmi_tools.git"
        }
    ],
    "require":           {
        "php":                                           "^7.4",
        "composer/installers":                           "^1.9",
        "cweagans/composer-patches":                     "^1.7",
        "drupal/core-composer-scaffold":                 "^8.9",
        "universityofadelaide/shepherd-drupal-scaffold": "^4.1",
        "drupal/console":                                "^1.8.0",
	"drupal/core-recommended":                       "^8.9",
        "drupal/drush_cmi_tools":                        "dev-8.x-2.x",
        "drush/drush":                                   "^9.7.0",
        "webflo/drupal-finder":                          "^1.2",
        "webmozart/path-util":                           "^2.3",
        "zaporylie/composer-drupal-optimizations":       "^1.0"
    },
    "require-dev":       {
        "drupal/core-dev": "^8.9"
    },
    "conflict":          {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable":     true,
    "config":            {
        "bin-dir":       "bin/",
        "sort-packages": true,
        "platform": {
            "php": "7.4.0"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts":           {
        "shepherd-scaffold": "UniversityOfAdelaide\\ShepherdDrupalScaffold\\Plugin::scaffold",
        "post-install-cmd":  [
            "@composer drupal:scaffold",
            "@shepherd-scaffold"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core":                     [
                "type:drupal-core"
            ],
            "web/libraries/{$name}":        [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}":  [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}":   [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}":        [
                "type:drupal-drush"
            ]
        },
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
            "locations": {
                "web-root": "web/"
            }
        }
    }
}
